<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mingle.service.ui.MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:paddingTop="@dimen/tool_bar_top_padding">

        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/toolBar" >
        </FrameLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/menu_drawer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:clickable="true"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="180dp" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/background_profile_default"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:id="@+id/user_action_group"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ACTION 1"
                    />


                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ACTION 2" />

            </LinearLayout>

            <com.xperi.avataimageview.DSAvatarImageView
                android:id="@+id/avatar"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="16dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_above="@id/user_action_group"
                android:src="@drawable/ayanami"
                app:border_color="@color/text_hint_or_disabled"
                app:border_width="1dp"
                app:text_color="@android:color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/avatar"
                android:layout_alignBottom="@+id/avatar"
                android:gravity="center"
                android:text="叶工工"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:fontFamily="Roboto Medium" />


        </RelativeLayout>

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>