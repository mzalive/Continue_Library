<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_in_search"
    android:layout_marginLeft="@dimen/card_margin_list_left_right"
    android:layout_marginRight="@dimen/card_margin_list_left_right"
    android:layout_marginTop="@dimen/card_margin_list_top_bottom"
    android:layout_marginBottom="@dimen/card_margin_list_top_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
    
        <ImageView
            android:id="@+id/card_book_image_in_search_list"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/title_in_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/text_primary_on_dark"
            android:textSize="24sp"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/subtext_in_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_in_list"
            android:gravity="left"
            android:textColor="@color/text_primary_on_dark"
            android:textSize="14sp"
            android:visibility="visible"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>